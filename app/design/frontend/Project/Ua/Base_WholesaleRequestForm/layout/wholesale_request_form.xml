<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <css src="Base_WholesaleRequestForm::css/form.css" />
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Wholesale form request</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Base\WholesaleRequestForm\Block\Form" name="form" template="Base_WholesaleRequestForm::form.phtml" ifconfig="wholesale_request_form/general/enable"/>
        </referenceContainer>
    </body>
</page>
